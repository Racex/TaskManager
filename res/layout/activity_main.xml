<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_layout_main"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    tools:context="com.example.taskmanager.MainActivity" >

    <ListView
        android:id="@+id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        android:orientation="vertical" >
    </ListView>

    <Button
        android:id="@+id/button1"
        android:layout_width="50dp"
        android:layout_alignBottom="@+id/android:list" 
        android:layout_alignEnd="@+id/android:list"
        android:layout_height="40dp"
        android:background="@drawable/button"
        android:onClick="openTaskMenu"
        android:shadowColor="#D9D451"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="+"
        android:textColor="#030303"
        android:textSize="20sp" />

</RelativeLayout>